{
  "name": "messenger-micro",
  "description": "Run your Facebook Messenger bot on Micro",
  "version": "0.1.0",
  "homepage": "https://github.com/AndreasPizsa/micro-messenger",
  "author": "Andreas Pizsa (https://github.com/AndreasPizsa)",
  "repository": "AndreasPizsa/micro-messenger",
  "bugs": {
    "url": "https://github.com/AndreasPizsa/micro-messenger/issues"
  },
  "license": "MIT",
  "files": [
    "index.js",
    "LICENSE"
  ],
  "main": "index.js",
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "lint": "eslint **/*.js",
    "test": "npm run lint && nyc ava",
    "commit": "git cz",
    "commitmsg": "validate-commit-msg",
    "precommit": "npm test",
    "prepublish": "npm test",
    "report-coverage": "nyc report --reporter=lcov > coverage.lcov && codecov",
    "start": "micro",
    "dev": "micro-dev"
  },
  "keywords": [
    "messenger",
    "micro",
    "zeit",
    "bot",
    "messenger bot",
    "bot framework"
  ],
  "devDependencies": {
    "@andreaspizsa/eslint-config": "0.0.1",
    "ava": "^0.23.0",
    "body-parser": "^1.18.2",
    "codecov": "^2.3.0",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "^4.8.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.2.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "express": "^4.16.1",
    "got": "^7.1.0",
    "husky": "^0.14.3",
    "micro": "^9.0.0",
    "micro-dev": "^1.2.3",
    "nyc": "^11.2.1",
    "sinon": "^4.0.1",
    "test-listen": "^1.0.2",
    "validate-commit-msg": "^2.14.0"
  },
  "dependencies": {
    "messenger-core": "^0.1.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
